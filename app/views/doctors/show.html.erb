<h1>Name: <%= @doctor.name %></h1><br>
<h3>Specialty: <%= @doctor.specialty %></h3><br>
<h3>University: <%= @doctor.university %></h3><br>

<h3>Hospital: <%= @doctor.hospital.name %></h3><br>

<h3>Patients: </h3><br>
<% @doctor.patients.each do |patient| %>
  <div id="id-<%= patient.id %>">
    <%= patient.name %><%= button_to 'Remove Patient', doctor_patient_path(@doctor.id, patient.id), method: :delete %><br>
  </div>
<% end %>

